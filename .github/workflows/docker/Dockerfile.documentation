FROM julia:1.8
RUN apt-get -y update

# https://serverfault.com/a/992421
RUN DEBIAN_FRONTEND=noninteractive TZ=Etc/UTC apt-get -y install tzdata
RUN apt-get -y install \
    cm-super \
    dvipng \
    inkscape \
    latexmk \
    texlive-fonts-extra \
    texlive-latex-extra \
    texlive-xetex \
    xindy \
    && apt-get autoclean -y \
    && apt-get autoremove -y \
    && rm -rf /var/lib/apt/lists/*
